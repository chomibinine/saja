;
        function showGameMessage(htmlContent, duration = 2000) { gameMessageSpot.innerHTML = htmlContent; setTimeout(() => { if (gameMessageSpot.innerHTML === htmlContent) { gameMessageSpot.innerHTML = ''; } }, duration); }
        function addXp(amount) { userData.xp += amount; if (userData.xp < 0) userData.xp = 0; const requiredXp = userData.level * 1000; if (userData.xp >= requiredXp) { userData.xp -= requiredXp; userData.level++; showGameMessage(`<div class="levelup-message">✨ LEVEL UP! LV.${userData.level}</div>`, 3000); showAchievement(`✨🏆✨ LEVEL UP! LV.${userData.level} 달성을 축하합니다!`); } const message = amount > 0 ? `+${amount}XP` : `${amount}XP`; showGameMessage(`<div class="xp-message">${message}</div>`); saveUserData(); updateDashboard(); }
        
        // ✅ FIX: Added currentUserId to feedback messages
        function selectAnswer(e) {
            clearInterval(timer);
            timerDisplay.classList.add('hidden');
            const selectedButton = e.target.closest('button');
            if (!selectedButton) return;
            const selectedAnswer = selectedButton.dataset.answer;
            const currentQuestion = currentQuizData[currentQuestionIndex];
            const correctAnswer = showWordAsQuestion ? currentQuestion.question : currentQuestion.answer;
            hintBtn.classList.add('hidden');
            showHint(true);
            if (selectedAnswer === correctAnswer) {
                selectedButton.classList.add('correct');
                score++;
                comboCount++;
                let baseXp = 100 + (comboCount >= 2 ? comboCount * 10 : 0);
                addXp(baseXp);
                playSound(correctSound);
                const randomMessage = correctMessages[Math.floor(Math.random() * correctMessages.length)];
                characterFeedback.textContent = `${currentUserId}, ${randomMessage}`; // Restored username
                characterFeedback.style.color = 'var(--correct-color)';
                characterFeedback.classList.add('show');
                if (comboCount >= 2) { setTimeout(() => showGameMessage(`<div class="combo-message">🔥 ${comboCount} COMBO!</div>`), 500); }
                if (!userData.masteredWords.includes(currentQuestion.id)) { userData.masteredWords.push(currentQuestion.id); }
                userData.incorrectNote = userData.incorrectNote.filter(id => id !== currentQuestion.id);
            } else {
                selectedButton.classList.add('incorrect');
                incorrectAnswersThisRound.push(currentQuestion);
                comboCount = 0;
                addXp(-50);
                playSound(incorrectSound);
                const randomMessage = wrongMessages[Math.floor(Math.random() * wrongMessages.length)];
                characterFeedback.textContent = `${currentUserId}, ${randomMessage}`; // Restored username
                characterFeedback.style.color = 'var(--incorrect-color)';
                characterFeedback.classList.add('show');
                if (!userData.incorrectNote.includes(currentQuestion.id)) { userData.incorrectNote.push(currentQuestion.id); }
                optionButtons.forEach(button => { if (button.dataset.answer === correctAnswer) button.classList.add('correct'); });
            }
            optionButtons.forEach(button => button.disabled = true);
            if (autoAdvance) { moveToNextQuestion(2000); } else { nextQBtn.classList.remove('hidden'); }
        }

        function resetState() { characterFeedback.classList.remove('show'); optionButtons.forEach(button => { button.disabled = false; button.className = 'option'; }); nextQBtn.classList.add('hidden'); gameMessageSpot.innerHTML = ''; hintBtn.classList.remove('hidden'); }
        
        // ✅ FIX: Added currentUserId to time-up message
        function handleTimeUp() {
            clearInterval(timer);
            const currentQuestion = currentQuizData[currentQuestionIndex];
            const correctAnswer = showWordAsQuestion ? currentQuestion.question : currentQuestion.answer;
            incorrectAnswersThisRound.push(currentQuestion);
            if (!userData.incorrectNote.includes(currentQuestion.id)) { userData.incorrectNote.push(currentQuestion.id); }
            comboCount = 0;
            addXp(-50);
            playSound(incorrectSound);
            const randomMessage = wrongMessages[Math.floor(Math.random() * wrongMessages.length)];
            characterFeedback.textContent = `시간 초과! ${currentUserId}, ${randomMessage}`; // Restored username
            characterFeedback.classList.add('show');
            characterFeedback.style.color = 'var(--incorrect-color)';
            optionButtons.forEach(button => { if (button.dataset.answer === correctAnswer) button.classList.add('correct'); button.disabled = true; });
            if (autoAdvance) { moveToNextQuestion(2000); } else { nextQBtn.classList.remove('hidden'); }
        }

        function speakWord(text) { if (!window.speechSynthesis) return; const utter = new SpeechSynthesisUtterance(text); utter.lang = 'en-US'; utter.rate = 0.9; speechSynthesis.speak(utter); }
        function loadQuestionDirection() { const saved = localStorage.getItem('showWordAsQuestion'); showWordAsQuestion = saved === 'true'; const toggle = document.getElementById('question-direction-toggle'); if (toggle) { toggle.checked = showWordAsQuestion; toggle.addEventListener('change', () => { showWordAsQuestion = toggle.checked; localStorage.setItem('showWordAsQuestion', showWordAsQuestion); }); } }
        function loadAutoAdvanceSetting() { const saved = localStorage.getItem('autoAdvanceEnabled'); autoAdvance = saved === null ? true : saved === 'true'; const toggle = document.getElementById('auto-advance-toggle'); if(toggle) { toggle.checked = autoAdvance; toggle.addEventListener('change', () => { autoAdvance = toggle.checked; localStorage.setItem('autoAdvanceEnabled', autoAdvance); }); } }
        function applyDarkMode(enabled) { document.body.classList.toggle('dark-mode', enabled); }
        function loadDarkModeSetting() { const saved = localStorage.getItem('darkModeEnabled'); const isEnabled = saved === 'true'; const toggle = document.getElementById('dark-mode-toggle'); if (toggle) { toggle.checked = isEnabled; applyDarkMode(isEnabled); toggle.addEventListener('change', () => { const newVal = toggle.checked; localStorage.setItem('darkModeEnabled', newVal); applyDarkMode(newVal); }); } }
        function updateQuizSelectionVisibility() { const useCustom = document.getElementById('custom-setting-toggle')?.checked; const radioSection = document.getElementById('quiz-selection'); const customSection = document.getElementById('custom-quiz-selection'); if (radioSection && customSection) { radioSection.style.display = useCustom ? 'none' : 'block'; customSection.style.display = useCustom ? 'block' : 'none'; } }
        function loadCustomToggle() { const saved = localStorage.getItem('customSettingEnabled'); const toggle = document.getElementById('custom-setting-toggle'); if (toggle) { toggle.checked = saved === 'true'; } }
        document.addEventListener('DOMContentLoaded', () => { const toggle = document.getElementById('custom-setting-toggle'); if (toggle) { toggle.addEventListener('change', () => { updateQuizSelectionVisibility(); localStorage.setItem('customSettingEnabled', toggle.checked); }); } });
        function initializeAudio() { if (soundEnabled) { correctSound.play().catch(()=>{}); correctSound.pause(); correctSound.currentTime = 0; incorrectSound.play().catch(()=>{}); incorrectSound.pause(); incorrectSound.currentTime = 0; achievementSound.play().catch(()=>{}); achievementSound.pause(); achievementSound.currentTime = 0; } window.removeEventListener('click', initializeAudio); }
        function initializeApp() { window.addEventListener('click', initializeAudio); createQuizSelection(); loadAllUsers(); populateUserSelect(); loadSoundSetting(); loadAutoAdvanceSetting(); if (Object.keys(allUsers).length > 0) { const firstUserId = Object.keys(allUsers)[0]; setCurrentUser(firstUserId); userSelect.value = firstUserId; } else { createUser('초미비니'); } startBtn.addEventListener('click', startQuiz); restartBtn.addEventListener('click', showStartScreen); retryIncorrectBtn.addEventListener('click', () => { const incorrectRadio = document.querySelector('input[value="incorrect"]'); if (incorrectRadio) { incorrectRadio.checked = true; startQuiz(); } }); nextQBtn.addEventListener('click', () => { nextQBtn.classList.add('hidden'); moveToNextQuestion(); }); optionButtons.forEach(button => { button.addEventListener('click', selectAnswer); }); hintBtn.addEventListener('click', showHint); settingsBtn.addEventListener('click', openSettings); closeSettingsBtn.addEventListener('click', closeSettings); addUserBtn.addEventListener('click', addUser); deleteUserBtn.addEventListener('click', deleteUser); soundToggle.addEventListener('change', toggleSound); settingsModal.addEventListener('click', (e) => { if (e.target === settingsModal) closeSettings(); }); }
        function showHint(force = false) { const currentQuestion = currentQuizData?.[currentQuestionIndex]; if (!currentQuestion) return; const hintContent = currentQuestion?.hint ? `<small style='font-size:1rem; color:#666;'>💡 ${currentQuestion.hint}</small>` : "<small style='font-size:1rem; color:#999;'>❗ 힌트가 제공되지 않습니다.</small>"; questionText.innerHTML = hintContent;
    if (!force) {
        if (userData.xp >= 20) {
            addXp(-20);
        } else {
            showGameMessage(`<div class="xp-message">XP가 부족해요!</div>`);
        }
    } hintBtn.classList.add('hidden'); if (userData.xp >= 20) { addXp(-20); } else { showGameMessage(`<div class="xp-message">XP가 부족해요!</div>`); } }
        function openSettings() { populateUserSelect(); settingsModal.classList.remove('hidden'); }
        function closeSettings() { settingsModal.classList.add('hidden'); }
        function toggleSound() { soundEnabled = soundToggle.checked; localStorage.setItem('soundEnabled', JSON.stringify(soundEnabled)); }
        function loadSoundSetting() { const savedSoundSetting = localStorage.getItem('soundEnabled'); if (savedSoundSetting !== null) { soundEnabled = JSON.parse(savedSoundSetting); } soundToggle.checked = soundEnabled; }
        function playSound(sound) { if (!soundEnabled) return; sound.currentTime = 0; sound.play().catch(e => console.warn("Sound play was blocked.")); }
        function loadAllUsers() { const savedUsers = localStorage.getItem('wordMasterUsers'); if (savedUsers) { allUsers = JSON.parse(savedUsers); } else { createUser('초미비니'); saveAllUsers(); } }
        function createUser(username) { username = username?.trim() || '초미비니'; if (allUsers[username]) { showUserMessage('이미 존재하는 사용자입니다!'); return false; } allUsers[username] = { level: 1, xp: 0, masteredWords: [], incorrectNote: [], achievements: [], profileImage: null }; saveAllUsers(); populateUserSelect(); setCurrentUser(username); userSelect.value = username; showUserMessage(`"${username}" 사용자가 생성되었습니다!`); return true; }
        function addUser() { const newUsername = prompt('새 사용자 이름을 입력하세요:', '초미비니'); if (newUsername) createUser(newUsername); }
        function deleteUser() { const username = userSelect.value; if (!username) { showUserMessage('삭제할 사용자를 선택해주세요!'); return; } if (Object.keys(allUsers).length <= 1) { showUserMessage('최소 한 명의 사용자가 필요합니다!'); return; } if (!confirm(`"${username}" 사용자를 정말 삭제하시겠습니까? 모든 학습 데이터가 사라집니다!`)) return; delete allUsers[username]; saveAllUsers(); populateUserSelect(); const firstUserId = Object.keys(allUsers)[0]; if (firstUserId) { setCurrentUser(firstUserId); userSelect.value = firstUserId; showUserMessage(`"${username}" 사용자가 삭제되었습니다.`); } }
        function populateUserSelect() { userSelect.innerHTML = ''; Object.keys(allUsers).forEach(username => { const option = document.createElement('option'); option.value = username; option.textContent = username; userSelect.appendChild(option); }); if (currentUserId) userSelect.value = currentUserId; }
        function setCurrentUser(username) { if (!allUsers[username]) return; currentUserId = username; userData = allUsers[username]; updateDashboard(); updateTitle(); const profileImg = document.getElementById('profile-img'); const mainProfileImg = document.getElementById('main-profile-img'); if (userData.profileImage) { profileImg.src = userData.profileImage; profileImg.style.display = 'block'; mainProfileImg.src = userData.profileImage; document.getElementById('character-img').style.display = 'flex'; } else { profileImg.src = ''; profileImg.style.display = 'none'; mainProfileImg.src = ''; document.getElementById('character-img').style.display = 'none'; } }
        function updateTitle() { mainTitle.innerHTML = `${currentUserId}의<br>중학 영단어 쪼개기`; }
        function showUserMessage(message) { userMessage.textContent = message; userMessage.classList.add('show'); setTimeout(() => userMessage.classList.remove('show'), 3000); }
        function saveAllUsers() { localStorage.setItem('wordMasterUsers', JSON.stringify(allUsers)); }
        function saveUserData() { if (currentUserId) { allUsers[currentUserId] = userData; saveAllUsers(); } }
        function createQuizSelection() { quizSelectionContainer.innerHTML = ''; const wordsPerGroup = 10; const groupCount = Math.ceil(fullQuizData.length / wordsPerGroup); for (let i = 0; i < groupCount; i++) { const startNum = i * wordsPerGroup + 1; const endNum = Math.min((i + 1) * wordsPerGroup, fullQuizData.length); const label = document.createElement('label'); const input = document.createElement('input'); input.type = 'radio'; input.name = 'quizRange'; input.value = `${startNum - 1}-${endNum - 1}`; label.append(input, ` #${String(startNum).padStart(4, '0')} ~ #${String(endNum).padStart(4, '0')}`); quizSelectionContainer.appendChild(label); } const allLabel = document.createElement('label'); const allInput = document.createElement('input'); allInput.type = 'radio'; allInput.name = 'quizRange'; allInput.value = 'all'; allLabel.append(allInput, ` 전체 단어 (${fullQuizData.length}개)`); quizSelectionContainer.appendChild(allLabel); const incorrectLabel = document.createElement('label'); const incorrectInput = document.createElement('input'); incorrectInput.type = 'radio'; incorrectInput.name = 'quizRange'; incorrectInput.value = 'incorrect'; incorrectLabel.innerHTML = ` 오답 노트 챌린지 (<span id="incorrect-count">0</span>개)`; incorrectLabel.prepend(incorrectInput); quizSelectionContainer.appendChild(incorrectLabel); quizSelectionContainer.querySelector('input[type="radio"]')?.setAttribute('checked', 'true'); }
        function updateQuizStats() { const requiredXp = userData.level * 1000; quizStatsDisplay.innerHTML = `<strong>LV.${userData.level}</strong> (${userData.xp}/${requiredXp} XP)`; }
        function updateDashboard() { levelDisplay.textContent = userData.level; xpDisplay.textContent = userData.xp; progressDisplay.textContent = `${new Set(userData.masteredWords).size} / ${fullQuizData.length}`; const incorrectCountSpan = document.getElementById('incorrect-count'); const incorrectRadio = document.querySelector('input[value="incorrect"]'); const incorrectNoteSet = new Set(userData.incorrectNote); if (incorrectCountSpan) incorrectCountSpan.textContent = incorrectNoteSet.size; if (incorrectRadio) { incorrectRadio.disabled = incorrectNoteSet.size === 0; incorrectRadio.parentElement.style.color = incorrectRadio.disabled ? '#aaa' : 'inherit'; } updateQuizStats(); }
        function showAchievement(message) { achievementPopup.textContent = message; achievementPopup.classList.add('show'); playSound(achievementSound); setTimeout(() => achievementPopup.classList.remove('show'), 3000); }
        function startQuiz() { const selectedRangeInput = document.querySelector('input[name="quizRange"]:checked'); if (!selectedRangeInput) { alert('퀴즈 범위를 선택해주세요!'); return; } const selectedRange = selectedRangeInput.value; const useCustom = document.getElementById('custom-setting-toggle')?.checked; if (useCustom) { let startIdx = parseInt(document.getElementById('custom-range-start')?.value) - 1; let endIdx = parseInt(document.getElementById('custom-range-end')?.value); let count = parseInt(document.getElementById('custom-question-count')?.value || 5); if (isNaN(startIdx) || isNaN(endIdx) || startIdx < 0 || endIdx <= startIdx || endIdx > fullQuizData.length) { alert('유효한 퀴즈 범위를 입력해주세요.'); return; } if (isNaN(count) || count < 3 || count > 20) { alert('문제 수는 3에서 20 사이로 설정해주세요.'); return; } currentQuizData = fullQuizData.slice(startIdx, endIdx).sort(() => 0.5 - Math.random()).slice(0, count); } else if (selectedRange === 'all') { currentQuizData = [...fullQuizData].sort(() => 0.5 - Math.random()); } else if (selectedRange === 'incorrect') { if (userData.incorrectNote.length === 0) { alert('오답 노트가 비어있습니다!'); return; } const incorrectNoteSet = new Set(userData.incorrectNote); currentQuizData = fullQuizData.filter(q => incorrectNoteSet.has(q.id)).sort(() => 0.5 - Math.random()); } else { const [start, end] = selectedRange.split('-').map(Number); currentQuizData = fullQuizData.slice(start, end + 1).sort(() => 0.5 - Math.random()); } if (currentQuizData.length === 0) { alert('선택한 범위에 문제가 없습니다.'); return; } incorrectAnswersThisRound = []; currentQuestionIndex = 0; score = 0; comboCount = 0; updateQuizStats(); history.pushState({screen: 'quiz'}, '', '#quiz'); startScreen.classList.add('hidden'); resultScreen.classList.add('hidden'); quizScreen.classList.remove('hidden'); showQuestion(); }
        function startTimer() { timeLeft = 15; timerDisplay.textContent = timeLeft; timerDisplay.classList.remove('hidden'); clearInterval(timer); timer = setInterval(() => { timeLeft--; timerDisplay.textContent = timeLeft; if (timeLeft <= 0) { clearInterval(timer); handleTimeUp(); } }, 1000); }
        function showQuestion() { resetState(); const currentQuestion = currentQuizData[currentQuestionIndex]; let questionHTML = `Q${currentQuestionIndex + 1}. `; let options = []; if (showWordAsQuestion) { questionHTML += `<strong>${currentQuestion.answer}</strong>`; const distractors = fullQuizData.filter(q => q.id !== currentQuestion.id); options = distractors.sort(() => 0.5 - Math.random()).slice(0, 3).map(q => q.question); options.push(currentQuestion.question); } else { questionHTML += currentQuestion.question; options = [...currentQuestion.options]; } questionText.innerHTML = `${questionHTML} <button id='pronounce-btn' style='margin-left:10px; background:none; border:none; font-size:1.2rem; cursor:pointer;'>🔊</button>`; const shuffledOptions = options.sort(() => 0.5 - Math.random()); optionButtons.forEach((button, index) => { button.innerText = shuffledOptions[index]; button.dataset.answer = shuffledOptions[index]; }); hintBtn.classList.remove('hidden'); updateProgressBar(); startTimer(); setTimeout(() => { const btn = document.getElementById('pronounce-btn'); if (btn) btn.onclick = () => speakWord(currentQuestion.answer); }, 0); }
        function moveToNextQuestion(delay = 0) { setTimeout(() => { currentQuestionIndex++; if (currentQuestionIndex < currentQuizData.length) { showQuestion(); } else { showResult(); } }, delay); }
        function updateProgressBar() { const progress = ((currentQuestionIndex + 1) / currentQuizData.length) * 100; progressBar.style.width = `${progress}%`; }
        function showResult() { quizScreen.classList.add('hidden'); resultScreen.classList.remove('hidden'); scoreText.innerHTML = `총 <strong>${currentQuizData.length}</strong> 문제 중 <strong>${score}</strong>개를 맞혔습니다!`; if (incorrectAnswersThisRound.length > 0) { incorrectSection.classList.remove('hidden'); retryIncorrectBtn.classList.remove('hidden'); incorrectList.innerHTML = ''; incorrectAnswersThisRound.forEach(item => { const li = document.createElement('li'); li.innerHTML = `<strong>${item.answer}</strong>: ${item.question}`; incorrectList.appendChild(li); }); } else { incorrectSection.classList.add('hidden'); retryIncorrectBtn.classList.add('hidden'); scoreText.innerHTML += "<br>🎉 <strong>완벽해요!</strong>"; if (currentQuizData.length >= 10 && !userData.achievements.includes('perfect10')) { showAchievement('🏆 도전 과제: 10문제 이상 완벽 클리어!'); userData.achievements.push('perfect10'); } } saveUserData(); updateDashboard(); }
        userSelect.addEventListener('change', () => { setCurrentUser(userSelect.value); });
        function showStartScreen() { startScreen.classList.remove('hidden'); quizScreen.classList.add('hidden'); resultScreen.classList.add('hidden'); history.pushState({screen: 'start'}, '', '#'); }
        window.addEventListener('popstate', (event) => { showStartScreen(); });
        const profileUpload = document.getElementById('profile-upload');
        const profileImg = document.getElementById('profile-img');
        const mainProfileImg = document.getElementById('main-profile-img');
        profileUpload.addEventListener('change', (event) => { const file = event.target.files[0]; if (!file) return; const reader = new FileReader(); reader.onload = function(e) { const imageData = e.target.result; profileImg.src = imageData; profileImg.style.display = 'block'; mainProfileImg.src = imageData; if (currentUserId && allUsers[currentUserId]) { allUsers[currentUserId].profileImage = imageData; saveAllUsers(); } }; reader.readAsDataURL(file); });
        window.addEventListener('load', () => { loadQuestionDirection(); initializeApp(); loadDarkModeSetting(); loadCustomToggle(); updateQuizSelectionVisibility(); });
    
function speakWord(word) {
    const utterance = new SpeechSynthesisUtterance(word);
    utterance.lang = 'en-US';
    utterance.rate = 0.9;
    speechSynthesis.speak(utterance);
}
</script>
</body>
</html>
